property newInitialRef ${nuklei:newReferenceId()} # external scope

property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property sourceInitial ${nuklei.streams("ws", "source")}
property sourceReply ${nuklei.streams("replyTarget", "ws#replySource")}

property newInitialId ${nuklei:newStreamId()}
property newCorrelationId ${nuklei:newCorrelationId()}

property newKey ${ws:handshakeKey()}

connect await ROUTED_INITIAL
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceInitial.throttle)}
        option writer ${agrona:oneToOneWriter(sourceInitial.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newInitialId}
write ${newInitialRef}
write ${newCorrelationId}
write [0xaa]
write [0x00] [0x07] ":scheme" [0x04] "http"
write [0x00] [0x07] ":method" [0x03] "GET"
write [0x00] [0x05] ":path" [0x05] "/echo"
write [0x00] [0x04] "host" [0x0e] "localhost:8080"
write [0x00] [0x07] "upgrade" [0x09] "websocket"
write [0x00] [0x0a] "connection" [0x07] "upgrade"
write [0x00] [0x11] "sec-websocket-key" [0x18] ${newKey}
write [0x00] [0x15] "sec-websocket-version" [0x02] "13"
write flush

read [0x40 0x00 0x00 0x02]
read ${newInitialId}
read [0..4]

close
closed

connect await ROUTED_REPLY
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceReply.buffer)}
        option writer ${agrona:oneToOneWriter(sourceReply.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:replyId)
read ([0..8]:replyRef)
read ${newCorrelationId}
read [0x67]
read [0x00] [0x07] ":status" [0x03] "101"
read [0x00] [0x07] "upgrade" [0x09] "websocket"
read [0x00] [0x0a] "connection" [0x07] "upgrade"
read [0x00] [0x14] "sec-websocket-accept" [0x1c] ${ws:handshakeHash(newKey)}

write [0x40 0x00 0x00 0x02]
write ${replyId}
write [0x00 0x02 0x00 0x00]
write flush

close
closed
