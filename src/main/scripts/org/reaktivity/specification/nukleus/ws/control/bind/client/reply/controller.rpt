# external newReplyRef

property nukleiC1C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlC1C ${nukleiC1C.control("ws")}

connect await BOUND_INITIAL
        agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(controlC1C.controller)}
        option writer ${agrona:manyToOneWriter(controlC1C.nukleus)}

connected

write [0x00 0x00 0x00 0x01]
write ${controlC1C.nextCorrelationId()}
write [0x12]
write flush

read [0x40 0x00 0x00 0x01]
read ${controlC1C.correlationId()}
read ([0..8]:newReplyRef)

close
closed

read notify BOUND_REPLY
