# TODO: revert this script to use k3po http transport as in k3po http specification once k3po
#       is enhanced to support manifesting this as high-level http

property location 'http://localhost:8080/echo'
property newServerAcceptRef  ${nuklei:newReferenceId()} # external
property serverTransport "nukleus://target/streams/ws#source"
property initialWindow 82000

accept ${serverTransport}
  option nukleus:route  ${newServerAcceptRef}
  option nukleus:window ${initialWindow}
  option nukleus:transmission "duplex"
accepted

read nukleus:begin.ext [0xbe 0x00 0x00 0x00]
                       [0x00] [0x07] ":scheme" [0x04 0x00] "http"
                       [0x00] [0x07] ":method" [0x03 0x00] "GET"
                       [0x00] [0x05] ":path" [0x0b 0x00] "/path?query"
                       [0x00] [0x0a] ":authority" [0x0e 0x00] "localhost:8080"
                       [0x00] [0x07] "upgrade" [0x09 0x00] "websocket"
                       [0x00] [0x0a] "connection" [0x07 0x00] "upgrade"
                       [0x00] [0x11] "sec-websocket-key" [0x18 0x00] /(?<key>[a-zA-Z0-9+\/=]{24})/
                       [0x00] [0x15] "sec-websocket-version" [0x02 0x00] "13"

write nukleus:begin.ext ${http:headers()
                              .item(":status", "101")
                              .item("upgrade", "websocket")
                              .item("connection", "upgrade")
                              .item("sec-websocket-accept", ws:handshakeHash(key))
                              .build()}

connected

read [0x82 0xfe 0xff 0xff] ([0..4] :readMask)
read option mask ${readMask}
read ([0..7178] :part1)
read ([0..7178] :part2)
read ([0..7178] :part3)
read ([0..7178] :part4)
read ([0..7178] :part5)
read ([0..7178] :part6)
read ([0..7178] :part7)
read ([0..7178] :part8)
read ([0..7178] :part9)
read ([0..933] :part10)
read option mask [0x00 0x00 0x00 0x00]

# 7178 = 8192 - 1000 (padding) - 14 (ws framing)
write [0x82 0x7e 0x1c 0x0a] ${part1}
write [0x82 0x7e 0x1c 0x0a] ${part2}
write [0x82 0x7e 0x1c 0x0a] ${part3}
write [0x82 0x7e 0x1c 0x0a] ${part4}
write [0x82 0x7e 0x1c 0x0a] ${part5}
write [0x82 0x7e 0x1c 0x0a] ${part6}
write [0x82 0x7e 0x1c 0x0a] ${part7}
write [0x82 0x7e 0x1c 0x0a] ${part8}
write [0x82 0x7e 0x1c 0x0a] ${part9}
write [0x82 0x7e 0x03 0xa5] ${part10}
