property key ${ws:handshakeKey()}
property writeMaskA ${ws:randomBytes(4)}
property writeMaskB ${ws:randomBytes(4)}
property writeMaskC ${ws:randomBytes(4)}
property writeMaskP ${ws:randomBytes(4)}
property writeMaskD ${ws:randomBytes(4)}
property writeMaskE ${ws:randomBytes(4)}
property client25a ${ws:randomBytes(25)}
property client25b ${ws:randomBytes(25)}
property client25c ${ws:randomBytes(25)}
property client25d ${ws:randomBytes(25)}
property client25e ${ws:randomBytes(25)}
property newServerAcceptRef  ${nuklei:newReferenceId()} # external

connect await ROUTED_SERVER
        "nukleus://ws/streams/source"
  option nukleus:route ${newServerAcceptRef}
  option nukleus:window 8192
  option nukleus:transmission "duplex"

write nukleus:begin.ext [0x00] [0x07] ":scheme" [0x04] "http"
write nukleus:begin.ext [0x00] [0x07] ":method" [0x03] "GET"
write nukleus:begin.ext [0x00] [0x05] ":path" [0x05] "/echo"
write nukleus:begin.ext [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write nukleus:begin.ext [0x00] [0x07] "upgrade" [0x09] "websocket"
write nukleus:begin.ext [0x00] [0x0a] "connection" [0x07] "Upgrade"
write nukleus:begin.ext [0x00] [0x11] "sec-websocket-key" [0x18] ${key}
write nukleus:begin.ext [0x00] [0x15] "sec-websocket-version" [0x02] "13"

read nukleus:begin.ext [0x00] [0x07] ":status" [0x03] "101"
read nukleus:begin.ext [0x00] [0x07] "upgrade" [0x09] /(?i:websocket)/
read nukleus:begin.ext [0x00] [0x0a] "connection" [0x07] /(?i:Upgrade)/
read nukleus:begin.ext [0x00] [0x14] "sec-websocket-accept" [0x1c] ${ws:handshakeHash(key)}

connected

write [0x02 0x99] ${writeMaskA}
write option mask ${writeMaskA}
write ${client25a}
write option mask [0x00 0x00 0x00 0x00]

write [0x00 0x99] ${writeMaskB}
write option mask ${writeMaskB}
write ${client25b}
write option mask [0x00 0x00 0x00 0x00]

write [0x00 0x99] ${writeMaskC}
write option mask ${writeMaskC}
write ${client25c}
write option mask [0x00 0x00 0x00 0x00]

write [0x89 0x80] ${writeMaskP}

write [0x00 0x99] ${writeMaskD}
write option mask ${writeMaskD}
write ${client25d}
write option mask [0x00 0x00 0x00 0x00]

write [0x80 0x99] ${writeMaskE}
write option mask ${writeMaskE}
write ${client25e}
write option mask [0x00 0x00 0x00 0x00]

read [0x8a 0x00]
read [0x82 0x7d] ${client25a} ${client25b} ${client25c} ${client25d} ${client25e}
